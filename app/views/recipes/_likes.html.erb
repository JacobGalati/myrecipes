<div class="btn-group w-100 like-bar bg-white mb-2" role="group" ara-label="Basic example">
	<%= link_to like_recipe_path(@recipe, like: true), method: :post, class: "like btn btn-xs w-50 border border-dark text-secondary" do%>
		<% if likeStatus == 'like' %>
	 		<i class="fas fa-thumbs-up"></i>
		<% else %>
			<i class="far fa-thumbs-up"></i>
		<% end %>
		<%= @recipe.thumbs_up_total %>
	<% end %>	
	<%= link_to like_recipe_path(@recipe, like: false), method: :post, class: "dislike btn btn-xs w-50 border border-dark text-secondary" do%>
		<% if likeStatus == 'dislike' %>
			<i class="fas fa-thumbs-down"></i>
		<% else %>
			<i class="far fa-thumbs-down"></i>
		<% end %>
		<%= @recipe.thumbs_down_total %>
	<% end %>
</div>
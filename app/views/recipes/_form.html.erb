<%= render 'shared/error', obj: @recipe %>
<%= form_for(@recipe, :html => {class: 'form', role: 'form'}) do |f| %>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: 'Recipe Name', class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, rows: 10, placeholder: 'Enter steps to create recipe', class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-dark' %>
      </div>
    </div>
  </div>
<% end %>
<%= render 'shared/error', obj: @recipe %>
<%= form_for(@recipe, :html => {class: 'form', role: 'form'}) do |f| %>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: 'Recipe Name', class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, rows: 10, placeholder: 'Enter steps to create recipe', class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name do |cb| %>
          <div class="form-check form-check-inline">
            <%= cb.label(class: "form-check-label") {cb.check_box(class: "form-check-input") + cb.text.capitalize } %>
          </div>
        <% end %>
      </div>
      <div class="form-group">
        <div class="control-label">
          <%= f.label :image, "Add Image" %>
        </div>
        <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png' %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-dark' %>
      </div>
    </div>
  </div>
<% end %>

<div class="center dark-link">
  [ <%= link_to "Cancel request and go back to recipes listing", recipes_path %> ]
</div>
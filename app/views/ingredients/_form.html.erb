<%= render 'shared/error', obj: @ingredient %>
<%= form_for(@ingredient, :html => {class: 'form', role: 'form'}) do |f| %>
  <div class="row">
    <div class="col-md-12">
      
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: 'Enter Ingredient', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit(@ingredient.new_record? ? "Add Ingredient" : "Update Ingredient",
                                      class: 'btn btn-dark') %>
      </div>
    </div>
  </div>
<% end %>

<div class="center dark-link">
  [ <%= link_to "Cancel request and go back to recipes listing", recipes_path %> ]
</div>
<%= render 'shared/page_title', title: "Log In" %>
 <%= form_for(:session, :html => {class: 'form', role: 'form'}, url: login_path) do |f| %>
 
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: 'Enter your email', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: 'Enter your password', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit "Log In", class: 'btn btn-dark' %>
  </div>
<% end %>   
<div class="d-flex justify-content-center dark-link">
  [ <%= link_to "Dont have an account? Sign up now!", signup_path %> ]
</div>